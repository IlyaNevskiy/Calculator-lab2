<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0c0c0"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_op"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/math_input"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/AC_btn"
                style="@style/ButtunOps"
                android:background="#70000000"
                android:rotationX="0"
                android:rotationY="0"
                android:text="AC" />

            <TextView
                android:id="@+id/rs_btn"
                style="@style/ButtunOps"
                android:background="#70000000"
                android:text="(" />

            <TextView
                android:id="@+id/ls_btn"
                style="@style/ButtunOps"
                android:background="#70000000"
                android:text=")" />

            <TextView
                android:id="@+id/divide_btn"
                style="@style/ButtunOps"
                android:background="#FF9800"
                android:text="/"
                android:textColor="#C1C1C1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/one_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="1"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/two_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="2"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/three_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="3"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/mult_btn"
                style="@style/ButtunOps"
                android:background="#FF9800"
                android:text="*"
                android:textColor="#C1C1C1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/four_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="4"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/five_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="5"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/six_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="6"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/minus_btn"
                style="@style/ButtunOps"
                android:background="#FF9800"
                android:text="-"
                android:textColor="#C1C1C1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/seven_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="7"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/eight_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="8"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/nine_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="9"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/plus_btn"
                style="@style/ButtunOps"
                android:background="#FF9800"
                android:text="+"
                android:textColor="#C1C1C1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dot_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="."
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/null_btn"
                style="@style/ButtunNums"
                android:background="#D2000000"
                android:text="0"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/C_btn"
                style="@style/ButtunOps"
                android:background="#FF9800"
                android:text="C"
                android:textColor="#C1C1C1" />

            <TextView
                android:id="@+id/equal_btn"
                style="@style/ButtunOps"
                android:background="#FF9800"
                android:text="="
                android:textColor="#C1C1C1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/answer_btn"
                style="@style/ButtunOps"
                android:background="#DC060409"
                android:onClick="tratsition"
                android:text="Result"
                android:textColor="#C1C1C1" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

